		// "sourceRoot": "",
		// "mapRoot": "",
		// "inlineSourceMap": true,
		// "inlineSources": true,

		/* Experimental Options */
		// "experimentalDecorators": true,
		// "emitDecoratorMetadata": true,

		/* Compiler Plugins */
		"plugins": [
			{
				// https://github.com/Microsoft/typescript-tslint-plugin
				"name": "typescript-tslint-plugin",
				"configFile": "tslint.json"
			}
		]
	},
	"include": ["src/**/*.ts"]
