{
	"compilerOptions": {
		/* Basic Options */
		"target": "es2017",
		"module": "commonjs",
		"lib": ["es2017"],
		// "allowJs": true,
		// "checkJs": true,
		// "jsx": "preserve",
		"declaration": true,
		// "declarationMap": true,
		// "sourceMap": true,
		// "outFile": "./",
		"outDir": "./dist",
		"rootDir": "./src",
		// "composite": true,
